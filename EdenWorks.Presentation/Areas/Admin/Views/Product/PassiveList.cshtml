@model List<ProductVM>
@{
    ViewData["Title"] = "PassiveList";
}


<div class="row ms-2 mt-2 me-2">
		<div class="col-sm-12">
			<div class="card card-primary">
				<div class="card-header">
					<h3 class="card-title">Product List</h3>
				</div>
				<div class="card-body">
					<table class="table table-hover">
						<thead>
							<tr>
								<th>Id</th>
								<th>Name</th>
								<th>Price</th>
								<th>Description</th>
								<th>Category Name</th>
								<th>Image</th>
								<th>Update</th>
								<th>Delete</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>@item.Id</td>
									<td>@item.Name</td>
									<td>@item.Price</td>
									<td>@item.Description</td>
									<td>@item.CategoryName</td>
									<td>
										<img src="@item.ImagePath" width"100" height="100">
									</td>
									<td>
										<a asp-action="SetActive" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Active</a>
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
				<div class="card-footer">
					<a asp-action="Create" class="btn btn-block btn-success">Create Product</a>
					<a asp-action="List" class="btn btn-block btn-primary float-end">See Active Products</a>
				</div>
			</div>
		</div>
	</div>
