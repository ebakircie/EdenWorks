@model List<CategoryVM>
@{
    ViewData["Title"] = "PassiveList";
}

<div class="row ml-2 mt-2 mr-2">
    <div class="col-sm-8">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Passive Category List</h3>
            </div>
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th >Make Active</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.CategoryName.ToUpper()</td>
                                <td>
                                    <a asp-action="SetActive" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Active</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="card-footer">
                <a asp-action="Create" class="btn btn-block btn-dark">Create Category</a>
                <a asp-action="List" class="btn btn-block btn-dark float-end">See Active Categories</a>
            </div>
        </div>
    </div>
</div>
