@model List<CategoryVM>
@{
    ViewData["Title"] = "List";
    
}


	<div class="row  ms-3">
		<div class="col-sm-8">
			<div class="card card-primary">
				<div class="card-header">
					<h3 class="card-title">Category List</h3>
				</div>
				<div class="card-body">
					<table class="table table-hover">
						<thead>
							<tr>
								<th>Id</th>
								<th>Name</th>
								<th>Products</th></>
								<th>Update</th>
								<th>Delete</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>@item.Id</td>
									<td>@item.CategoryName</td>
									<td>
										<a asp-area="Admin" asp-controller="Product" asp-action="GetProductsByCategory" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Products</a>
									</td>
									<td>
										<a asp-action="Update" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Update</a>
									</td>
									<td>
										<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
				<div class="card-footer">
					<a asp-action="Create" class="btn btn-sm btn-success">Create Category</a>
					<a asp-action="PassiveList" class="btn btn-sm btn-primary float-end">Passive List</a>
				</div>
			</div>
		</div>
	</div>


