@model UpdateCategoryDTO
@{
    ViewData["Title"] = "Update";
    
}

	<div class="row ms-3">
		<div class="col-sm-6">
			<div class="card card-primary">
				<div class="card-header">
					<h3 class="card-title">Update Category</h3>
				</div>
				<form asp-action="Update" >
					<input type ="hidden" asp-for="CreatedDate" />
					<input type = "hidden" asp-for="CreatedIpAddress" />
					<input type = "hidden" asp-for="CreatedMachineName" />
					<div class="card-body">
						<div class="form-group">
							<label asp-for="CategoryName">Category Name</label>
							<input class="form-control" placeholder="Genre Name" asp-for="CategoryName">
							<span asp-validation-for="CategoryName" class="text-danger"></span>
						</div>
					</div>
					<div class="card-footer align-items-sm-end">
						<input type="submit" class="btn btn-primary btn-sm " value="Submit" />
						<a asp-action="List" class="btn btn-dark btn-sm float-end">Back To List</a>
					</div>
				</form>
			</div>
		</div>
	</div>