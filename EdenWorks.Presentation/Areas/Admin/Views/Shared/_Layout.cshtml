@using EdenWorks.Domain.Entites
@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EdenWorks.Presentation</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EdenWorks.Presentation.styles.css" asp-append-version="true" />
    <!-- Bootstrap CSS CDN -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <style>
        a {
            color: #ffffff;
            text-decoration: none;
        }
    </style>

</head>
<body>
    <div class="general">
        <div class="wrapper">
            <!-- Sidebar  -->
            <nav id="sidebar">
                <div class="sidebar-header">
                    <h3>Admin Page</h3>
                    <a class="btn btn-danger btn-sm float-left" asp-area="Admin" asp-controller="Account" asp-action="Logout">Logout</a>
                </div>

                <ul class="list-unstyled components">
                    @*  <p>Test Heading</p>*@
                    <li class="active">
                        <a asp-area="Admin" asp-controller="Home" asp-action="AdminMain">Home</a>
                    </li>
                    <li class="active">
                        <a href="#categorySubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Category</a>
                        <ul class="collapse list-unstyled" id="categorySubmenu">
                            <li class="active">
                                <a asp-area="Admin" asp-controller="Category" asp-action="Create">Create Category</a>
                            </li>
                            <li class="active">
                                <a asp-area="Admin" asp-controller="Category" asp-action="List">Category List</a>
                            </li>
                              <li class="active">
                                <a asp-area="Admin" asp-controller="Category" asp-action="PassiveList">Passive List</a>
                            </li>
                        </ul>
                    </li>

                    <li class="active">
                        <a href="#productSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Products</a>
                        <ul class="collapse list-unstyled" id="productSubmenu">
                            <li class="active">
                                <a asp-area="Admin" asp-controller="Product" asp-action="Create">Create Product</a>
                            </li>
                            <li class="active">
                                <a asp-area="Admin" asp-controller="Product" asp-action="List">All Products</a>
                            </li>
                             <li class="active">
                                <a asp-area="Admin" asp-controller="Product" asp-action="PassiveList">Passive Products</a>
                            </li>
                        </ul>
                    </li>
                    <li class="active">
                        <a href="#accountSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Account</a>
                        <ul class="collapse list-unstyled" id="accountSubmenu">
                            <li class="active">
                                 <a asp-area="Admin" asp-controller="Account" asp-action="Register">Create Account</a>
                            </li class="active">
                            <li class="active">
                                 <a asp-area="Admin" asp-controller="Account" asp-action="Edit">Edit Account</a>
                            </li>
                        </ul>
                    </li>
                    <li class="active">
                        <a href="#">Contact</a>
                    </li>
                </ul>
            </nav>
            <!-- Page Content  -->
            <div id="content">

                <nav class="navbar navbar-expand-md  navbar-dark bg-dark" style="padding-left:0px;">
                    <div class="container" style ="padding:0px;">

                        <button type="button" id="sidebarCollapse" class="btn btn-info">
                            <i class="fas fa-align-left"></i>
                            <span>Toggle</span>
                        </button>


                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            @*       <ul class="nav navbar-nav ml-auto">
                                <li class="nav-item active">
                                <a class="nav-link" href="#">Page</a>
                                </li>
                                <li class="nav-item">
                                <a class="nav-link" href="#">Page</a>
                                </li>
                                <li class="nav-item">
                                <a class="nav-link" href="#">Page</a>
                                </li>
                                <li class="nav-item">
                                <a class="nav-link" href="#">Page</a>
                                </li>
                                </ul>*@
                        </div>
                        @using (Html.BeginForm("ProductSearch", "Product"))
                        {
                            @Html.TextBox("Name")
                            <input type="submit" value="Search">
                        }
                    </div>
                </nav>


                <partial name="_NotificationPartial" />
                @RenderBody()

            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- jQuery CDN -->
    <script src="https://code.jquery.com/jquery-1.12.0.min.js"></script>
    <!-- Bootstrap Js CDN -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
